<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>assembly</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/assembly/root</directory>
			<excludes>
				<exclude>**/*.sh</exclude>
				<exclude>**/*.gitignore</exclude>
			</excludes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/assembly/root</directory>
			<includes>
				<include>**/*.sh</include>
			</includes>
			<fileMode>0700</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<outputDirectory>lib/parcel</outputDirectory>
			<directory>target</directory>
			<includes>
				<include>*.parcel*</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/jar</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<scope>compile</scope>
			<includes>
				<include>${groupId}:${artifactId}</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/jar/dep</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<scope>compile</scope>
			<includes>
				<include>${groupId}</include>
			</includes>
			<excludes>
				<exclude>${groupId}:${artifactId}</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>${groupId}:${artifactId}</include>
			</includes>
			<unpackOptions>
				<includes>
					<include>cfg/**/*</include>
					<include>ddl/**/*</include>
					<include>sql/**/*</include>
				</includes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<outputDirectory></outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>com.cloudera.framework:cloudera-framework-assembly
				</include>
			</includes>
			<fileMode>0700</fileMode>
			<directoryMode>0755</directoryMode>
			<unpackOptions>
				<includes>
					<include>**/*.sh</include>
					<include>**/*.py</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
</assembly>